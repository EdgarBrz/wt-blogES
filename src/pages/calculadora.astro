---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WaterCalculator from '../components/WaterCalculator.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<BaseHead title={`Calculadora de Calidad del Agua | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="calculator-page">
                <div class="page-header">
                    <h1>Calculadora de Calidad del Agua</h1>
                    <p>Eval√∫e la calidad de su agua y obtenga recomendaciones personalizadas para su tratamiento</p>
                </div>
                <WaterCalculator />
            </div>
		</main>
		<Footer />
	</body>
</html>

<style>
.calculator-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
}

.page-header h1 {
    color: #2196f3;
    font-size: 2.5em;
    margin-bottom: 1rem;
}

.page-header p {
    color: #666;
    font-size: 1.2em;
    max-width: 800px;
    margin: 0 auto;
}

@media (max-width: 768px) {
    .calculator-page {
        padding: 1rem;
    }

    .page-header h1 {
        font-size: 2em;
    }

    .page-header p {
        font-size: 1.1em;
    }
}
</style>
